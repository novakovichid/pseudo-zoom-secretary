{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "lib": ["ES2021", "DOM"],
    "types": ["node", "electron"],
    "resolveJsonModule": true,
    "baseUrl": "src"
  },
  "include": ["src/**/*", "electron.vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
